---
import NormalizeCSS from './NormalizeCSS.astro'

/**
 * Breakpoints:
 * // very small screens
 * media only screen and (max-width: 599px) {...}
 * // Small screen devices
 * media only screen and (min-width: 600px) {...}
 * // Medium screen devices (768px and above)
 * media only screen and (min-width: 768px) {...}
 * // Big screen devices (889px and above)
 * media only screen and (min-width: 889px) {...}
 * // Extra big screen devices (1200px and above)
 * media only screen and (min-width: 1200px) {...}
 */
---

<NormalizeCSS />
<style is:global>
  @media (prefers-color-scheme: light) {
    :root {
      --emph-color: #663399;
      --background-color: #ffffff;
      --mute-background-color: rgba(0, 0, 0, 0.1);
      --color: #000000;

      --link-color: rgb(0, 64, 137);
      --link-visited-color: rgba(0, 64, 137, 0.8);

      --label-primary-color: #14bceb;
    }
  }

  @media (prefers-color-scheme: dark) {
    :root {
      --emph-color: #c9afe4;
      --background-color: rgb(3, 5, 32);
      --mute-background-color: rgba(255, 255, 255, 0.1);
      --color: #ffffff;

      --link-color: rgb(116, 181, 255);
      --link-visited-color: rgb(116, 181, 255, 0.8);

      --label-primary-color: #00485c;
    }
  }

  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    justify-content: center;
    align-items: center;
    background-color: var(--background-color);
    color: var(--color);
    font-family: 'Fort', 'Seravek', 'Fira Sans', 'FF Unit', 'Concourse',
      'Calibri', system-ui;
    font-size: 15pt;
    /* font-family: 'Verdigris', 'Iowan Old Style', 'Palatino Nova', 'Valkyrie', 'Palatino', system-ui; */
    word-wrap: break-word;
    word-break: break-word;
  }

  pre {
    max-width: 99vw;
    overflow-x: auto;
    border: 1px dashed var(--emph-color);
  }

  @media screen and (min-width: 1200px) {
    body {
      max-width: 1400px;
      margin-left: auto;
      margin-right: auto;
    }

    pre {
      max-width: 1200px;
    }
  }
  code {
    font-family: 'Fira Mono', 'Input', 'Pitch', 'Triplicate', 'Courier New',
      monospace;
  }
  details {
    cursor: pointer;
  }
  li + li {
    margin-top: 0.2rem;
  }

  a:visited {
    color: var(--color);
    opacity: 0.7;
  }
  a:link {
    color: var(--link-color);
    opacity: 0.7;
  }
  a:hover {
    color: var(--link-color);
    opacity: 1;
  }
  a:active {
    color: var(--color);
    opacity: 1;
  }
  a[href]:not(:where(
  /* exclude hash only links */
  [href^="#"],
  /* exclude relative but not double slash only links */
  [href^="/"]:not([href^="//"]),
  /* domains to exclude */
  [href*="//stackoverflow.com"],
  /* subdomains to exclude */
  [href*="//meta.stackoverflow.com"],
)):after {
    content: '\29c9';
  }

  img, video {
    max-width: 100vw;
  }

  noscript {
    background-color: var(--background-color);
    position: fixed;
    bottom: 0;
    left: 0;
    border: 1px dashed var(--emph-color);
    margin: 0.5em;
    padding: 0.1em;
  }
</style>
