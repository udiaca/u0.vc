---
const { text, tooltipText } = Astro.props
---

<div class="tooltip">
  {text}
  <span class="tooltiptext">{tooltipText}</span>
</div>
<style>
  /* Tooltip container */
  .tooltip {
    position: relative;
    display: inline-block;
    border-bottom: 1px dotted var(--emph-color); /* If you want dots under the hoverable text */
    cursor: default;
  }

  /* Tooltip text */
  .tooltip .tooltiptext {
    visibility: hidden;
    opacity: 0;

    width: 300%;
    background-color: var(--label-primary-color);
    color: var(--color);
    text-align: center;
    padding: 5px 0;
    border-radius: 6px;

    transition: opacity 0.5s ease-in;

    position: absolute;
    z-index: 1;
    top: -5px;
    left: 100%;
    transform: translateX(0.5rem);
  }

  .tooltip .tooltiptext::after {
    content: ' ';
    position: absolute;
    top: 50%;
    right: 100%; /* To the left of the tooltip */
    margin-top: -5px;
    border-width: 5px;
    border-style: solid;
    border-color: transparent var(--label-primary-color) transparent transparent;
  }

  /* Show the tooltip text when you mouse over the tooltip container */
  .tooltip:hover .tooltiptext {
    visibility: visible;
    opacity: 1;
  }
</style>
